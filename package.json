{
  "name": "@wearerequired/plugin-name",
  "version": "0.0.0",
  "private": true,
  "description": "Plugin description.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "start:hot": "wp-scripts start --hot --allowed-hosts all",
    "lint-js": "wp-scripts lint-js",
    "lint-js:fix": "wp-scripts lint-js --fix",
    "lint-css": "wp-scripts lint-style",
    "lint-css:fix": "wp-scripts lint-style --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearerequired/wordpress-plugin-boilerplate.git"
  },
  "author": "required gmbh",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/wearerequired/wordpress-plugin-boilerplate/issues"
  },
  "homepage": "https://github.com/wearerequired/wordpress-plugin-boilerplate#readme",
  "devDependencies": {
    "@types/node": "22.13.4",
    "@types/webpack-env": "1.18.8",
    "@types/wordpress__block-editor": "11.5.16",
    "@types/wordpress__blocks": "12.5.17",
    "@wearerequired/browserslist-config": "0.3.0",
    "@wearerequired/eslint-config": "6.0.0",
    "@wearerequired/postcss-config": "1.1.0",
    "@wearerequired/stylelint-config": "6.0.0",
    "@wordpress/element": "6.18.0",
    "@wordpress/scripts": "30.11.0",
    "prettier": "npm:wp-prettier@3.0.3",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@wordpress/icons": "10.18.0"
  },
  "stylelint": {
    "extends": [
      "@wearerequired/stylelint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@wearerequired/eslint-config"
    ],
    "rules": {
      "@wordpress/i18n-text-domain": [
        "error",
        {
          "allowedTextDomain": [
            "plugin-name"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "extends @wearerequired/browserslist-config/modern"
  ]
}
